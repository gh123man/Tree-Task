<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ghsoft.treetask"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> 

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.Treetask" >
        <activity
            android:name="com.ghsoft.treetask.Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ghsoft.treetask.TaskView"></activity>
        <activity android:name="com.ghsoft.treetask.NewTaskTree"></activity>
        <activity android:name="com.ghsoft.treetask.NewTask"></activity>
        <activity android:name="com.ghsoft.treetask.EditTask"></activity>
        <activity android:name="com.ghsoft.treetask.TreeView"></activity>
    </application>

</manifest>